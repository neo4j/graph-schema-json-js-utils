{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "graphSchemaRepresentation": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "graphSchema": {
          "type": "object",
          "properties": {
            "nodeLabels": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "$id": {
                    "type": "string"
                  },
                  "token": {
                    "type": "string"
                  },
                  "properties": { "$ref": "#/$defs/PropertyTypesOneOf" }
                },
                "additionalProperties": false,
                "required": ["$id", "token", "properties"]
              }
            },
            "relationshipTypes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "$id": {
                    "type": "string"
                  },
                  "token": {
                    "type": "string"
                  },
                  "properties": { "$ref": "#/$defs/PropertyTypesOneOf" }
                },
                "additionalProperties": false,
                "required": ["$id", "token", "properties"]
              }
            },
            "nodeObjectTypes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "$id": {
                    "type": "string"
                  },
                  "labels": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "$ref": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false,
                      "required": ["$ref"]
                    }
                  }
                },
                "additionalProperties": false,
                "required": ["$id", "labels"]
              }
            },
            "relationshipObjectTypes": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "$id": {
                    "type": "string"
                  },
                  "type": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["$ref"],
                    "properties": {
                      "$ref": {
                        "type": "string"
                      }
                    }
                  },
                  "from": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["$ref"],
                    "properties": {
                      "$ref": {
                        "type": "string"
                      }
                    }
                  },
                  "to": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["$ref"],
                    "properties": {
                      "$ref": {
                        "type": "string"
                      }
                    }
                  }
                },
                "additionalProperties": false,
                "required": ["$id", "type", "from", "to"]
              }
            },
            "constraints": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "$id": {
                    "type": "string"
                  },
                  "constraintType": {
                    "type": "string",
                    "enum": [
                      "uniqueness",
                      "propertyExistence",
                      "propertyType",
                      "key"
                    ]
                  },
                  "entityType": {
                    "type": "string",
                    "enum": ["node", "relationship"]
                  },
                  "nodeLabel": {
                    "type": "object",
                    "properties": {
                      "$ref": {
                        "type": "string"
                      }
                    }
                  },
                  "relationshipType": {
                    "type": "object",
                    "properties": {
                      "$ref": {
                        "type": "string"
                      }
                    }
                  },
                  "name": {
                    "type": "string"
                  },
                  "properties": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "$ref": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false,
                      "required": ["$ref"]
                    }
                  }
                },
                "oneOf": [
                  {
                    "properties": {
                      "entityType": {
                        "const": "node"
                      }
                    },
                    "required": ["nodeLabel"]
                  },
                  {
                    "properties": {
                      "entityType": {
                        "const": "relationship"
                      }
                    },
                    "required": ["relationshipType"]
                  }
                ],
                "additionalProperties": false,
                "required": [
                  "$id",
                  "constraintType",
                  "entityType",
                  "name",
                  "properties"
                ]
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "nodeLabels",
            "relationshipTypes",
            "nodeObjectTypes",
            "relationshipObjectTypes",
            "constraints"
          ]
        }
      }
    }
  },
  "additionalProperties": false,
  "required": ["graphSchemaRepresentation"],
  "$defs": {
    "PropertyTypesOneOf": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/PropertyTypesArrayObject"
          },
          {
            "type": "object",
            "additionalProperties": false,
            "required": ["token", "type", "nullable"],
            "properties": {
              "token": {
                "type": "string"
              },
              "nullable": { "type": "boolean" },
              "$id": { "type": "string" },
              "type": {
                "oneOf": [
                  {
                    "$ref": "#/$defs/PropertyTypes"
                  },
                  {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        { "$ref": "#/$defs/PropertyTypes" },
                        { "$ref": "#/$defs/PropertyTypesArray" }
                      ]
                    }
                  }
                ]
              }
            }
          }
        ]
      }
    },
    "PropertyTypesArray": {
      "type": "object",
      "required": ["items", "type"],
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^array$"
        },
        "items": {
          "$ref": "#/$defs/PropertyTypes"
        }
      }
    },
    "PropertyTypesArrayObject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["$id", "token", "type", "nullable"],
      "properties": {
        "$id": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/PropertyTypesArray"
        },
        "nullable": { "type": "boolean" }
      }
    },
    "PropertyTypes": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/$defs/PropertyTypesEnum"
        }
      }
    },
    "PropertyTypesEnum": {
      "type": "string",
      "enum": [
        "integer",
        "string",
        "float",
        "boolean",
        "point",
        "date",
        "datetime",
        "time",
        "localtime",
        "localdatetime",
        "duration"
      ]
    }
  }
}
